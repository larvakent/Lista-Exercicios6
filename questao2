package Exercicios6;

import java.util.Scanner;

public class Questao2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*Ler 10 números e imprimir quantos são pares e quantos são ímpares. (FOR)*/
		
		int numero,somaPar=0,somaImpar=0,x;
		
		Scanner leia = new Scanner(System.in);
		
		for(x=1;x<=10;x++)
		{
			System.out.println("\nInsira um número inteiro: ");
			numero = leia.nextInt();
		
		if(numero%2==0)
		{
			System.out.println("\nPAR");
			
			somaPar+=numero;
		}
		else
		{
			System.out.println("\nIMPAR");
			
			somaImpar+=numero;
		}
		}
		System.out.println("\nSomatório dos pares: "+somaPar);
		System.out.println("\nSomatório dos ímpares: "+somaImpar);
		
	}

}
