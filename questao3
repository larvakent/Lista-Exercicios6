package Exercicios6;

import java.util.Scanner;

public class Questao3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		/*Solicitar a idade de v√°rias pessoas e imprimir: Total de pessoas com menos de
21 anos. Total de pessoas com mais de 50 anos. O programa termina quando
idade for =-99. (WHILE)*/
		
		int idade=0,totalJ=0,totalV=0;
        Scanner leia = new Scanner(System.in);
        
        
        while(idade!=-99)
        {
        	System.out.println("\nInsira sua idade: ");
            idade = leia.nextInt();
            
        	if(idade<=21)
        	{
        		totalJ++;
        		
        	}
        	else if(idade>=50)
        	{
        		totalV++;
        		
        	}
        	
        }
        System.out.println("\nTotal de pessoas com menos de 21 anos: "+totalJ);
    	System.out.println("\nTotal de pessoas com mais de 50 anos: "+totalV);
        
	}

}
